                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MotherName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PresentAddress)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PresentAddress)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PermanentAddress)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PermanentAddress)
                </dd>

            </dl>
        </div>

    </div>
</div>


