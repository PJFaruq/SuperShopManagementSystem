@model IEnumerable<SuperShopManagementSystem.Models.Operation.Purchase>

@{
    ViewBag.Title = "ShowAll";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="text-center">All Purchase List</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered table-condensed table-striped table-responsive search-table ">
                            <thead>
                                <tr>
                                    <th>
                                        Employee
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Supplier
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PurchaseDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Remarks)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Total)
                                    </th>
                                    <th>
                                        Amount Due
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="DelRow_@item.Id">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Employee.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Outlet.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Party.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PurchaseDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Remarks)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Total)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AmountDue)
                                        </td>
                                        
                                        <td>
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { target = "_blank", @class = "btn btn-primary" })
                                            @Html.ActionLink("Download Pdf", "PurchaseReceiptPdf", new { id = item.Id }, new { target = "_blank", @class = "btn btn-success" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        @Html.Hidden("DeleteId")

                        <div id="myModal" class="modal fade" role="dialog">
                            <div class="modal-dialog">
                                Modal content
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>

                                        <h2 class="modal-title">Confirm to Delete Item Category</h2>
                                    </div>
                                    <div class="modal-body">
                                        <h4>Are you sure to Delete this Item Category ???</h4>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                        <input type="button" class="btn btn-danger" value="Confirm Delete" id="btnConfirmDelete" />
                                    </div>
                                </div>

                            </div>
                        </div>



                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
