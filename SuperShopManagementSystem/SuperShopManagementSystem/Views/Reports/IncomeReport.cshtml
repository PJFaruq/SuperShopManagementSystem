@model SuperShopManagementSystem.Models.ViewModel.IncomeReportVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IncomeReport</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/ProjectStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <div class="col-md-12">
                            <div style="text-align:right">
                                <div class="h4">Extreme BD</div>
                                Extreme BD Super Shop
                                <div>Contact No. 01767111351</div>
                                <div>Sukrabad, Dhaka 1207</div>
                                <div>Bangladesh</div><br />
                            </div>
                        </div>
                        <div class="col-md-12 text-center">
                            <code class="h2 PdfHeader">INCOME REPORT</code>
                        </div>
                        <br />
                        <div class="col-md-12">
                            <div style="height:2px;background-color:#00ffff"></div>
                        </div>
                        <br />
                        <div class="col-xs-12">
                            <div class="col-xs-12">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <div class="h4">Purchase Report</div>

                                    </div>
                                    <div class="panel-body">
                                        <table class="tableDesign table table-bordered table-condensed table-striped table-responsive ">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        SL
                                                    </th>
                                                    <th>
                                                        Date
                                                    </th>
                                                    <th>
                                                        Description
                                                    </th>
                                                    <th>
                                                        Amount
                                                    </th>
                                                </tr>
                                            </thead>
                                            @if (Model != null)
                                            {
                                                <tbody>
                                                    @{int count = 0; }
                                                    @foreach (var item in @Model.Purchase)
                                                    {
                                                        { count++; }
                                                        <tr>
                                                            <td>
                                                                @count
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.PurchaseDate)
                                                            </td>
                                                            <td>
                                                                <table border="1" style="font-size:10px;" class="table table-bordered">
                                                                    <thead>
                                                                        <tr>
                                                                            <td>Item</td>
                                                                            <td>Quantity</td>
                                                                            <td>Price</td>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var purchase in item.PurchaseDetails)
                                                                        {
                                                                            <tr>
                                                                                <td>@purchase.Item.Name</td>
                                                                                <td>@purchase.Quantity</td>
                                                                                <td>@purchase.Total</td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>

                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Total)
                                                            </td>

                                                        </tr>


                                                    }
                                                </tbody>
                                            }

                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <div class="h4">Sales Report</div>

                                    </div>
                                    <div class="panel-body">
                                        <table class="tableDesign table table-bordered table-condensed table-striped table-responsive ">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        SL
                                                    </th>
                                                    <th>
                                                        Date
                                                    </th>
                                                    <th>
                                                        Description
                                                    </th>
                                                    <th>
                                                        Amount
                                                    </th>
                                                </tr>
                                            </thead>
                                            @if (Model != null)
                                            {
                                                <tbody>
                                                    @{int count = 0; }
                                                    @foreach (var item in @Model.Sales)
                                                    {
                                                        { count++; }
                                                        <tr>
                                                            <td>
                                                                @count
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.SalesDate)
                                                            </td>
                                                            <td>
                                                                <table border="1" style="font-size:10px;" class="table table-bordered">
                                                                    <thead>
                                                                        <tr>
                                                                            <td>Item</td>
                                                                            <td>Quantity</td>
                                                                            <td>Price</td>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var purchase in item.SalesDetails)
                                                                        {
                                                                            <tr>
                                                                                <td>@purchase.Item.Name</td>
                                                                                <td>@purchase.Quantity</td>
                                                                                <td>@purchase.Total</td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>

                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Total)
                                                            </td>

                                                        </tr>


                                                    }
                                                </tbody>
                                            }

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <div class="h4">Summary</div>
                                </div>
                                <div class="panel-body">
                                    <table class="tableDesign table table-bordered table-striped table-responsive">
                                        <thead>
                                            <tr>
                                                <td>Total Purchase</td>
                                                <td>Total Sales</td>
                                                <td>Total Profit</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                @if (Model != null)
                                                {
                                                    <td>@Model.TotalPurchase</td>
                                                    <td>@Model.TotalSales</td>
                                                    <td>@Model.TotalProfit</td>
                                                }

                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>


        </div>

    </div>

</body>
</html>
